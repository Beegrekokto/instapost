<!DOCTYPE html>
<html>
<head>
  <title>Instapost</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Satisfy' rel='stylesheet' type='text/css'>
</head>
<body>

<nav>
	<div class="container">
		<div class="row">
			<div class="col-lg-6 col-lg-offset-3">
				<div class="row">
					<div class="nav-wrapper">
						<div class="row">

							<div class="col-xs-6">
								<span class="pull-left brand"><%= link_to 'Instagram', root_path %></span>
							</div>
							<div class="row">
								<div class="col-xs-6">
									<% if user_signed_in? %>
									   <span class="nav_links pull-right"><%= link_to 'New Post', new_post_path %></span>
									   <span class="nav_links pull-right"><%= link_to 'Edit Setting', edit_user_registration_path %></span>
									   <span class="nav_links pull-right"><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></span>
									<% else %>
									   <span class="nav_links pull-right"><%= link_to 'Sign up', new_user_registration_path %></span>
									   <span class="nav_links pull-right"><%= link_to 'Log in', new_user_session_path %></span>
									<% end %>
							    </div>	
							 </div>	
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</nav>


<%= yield %>


</body>

</html>
